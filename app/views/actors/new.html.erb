
<div class="container">
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            <h1 class="text-center">CREAR NUEVO ACTOR</h1>
            <div class="jumbotron">
              
              <%= form_for @actor do |actor| %>

                <div class="form-group">
                  <%= actor.text_field :name, class:"form-control" , placeholder:"Nombre del actor" %>
                </div>

                <div class="form-group">
                  <%= actor.text_area :bio, class:"form-control", placeholder:"Biografía" %>
                </div>

                <div class="form-group">
                  <label>Fecha de Nacimiento</label><br>
                  <%= actor.date_field :birth_date, class:"form-control" %>
                </div>

                <div class="form-group">
                  <%= actor.text_field :birth_place, class:"form-control", placeholder:"Luga de Nacimiento" %>
                </div>

                <div class="form-group">
                  <%= actor.url_field :image_url, class:"form-control", placeholder:"URL de la foto" %>
                </div>
                
                <div class="text-center">
                  <label>Aún vive</label><br>
                  <%= actor.check_box :alive, {}, true, false %>
                </div>
                
                <div class="form-group">
                  <label>Fecha del fallecimiento</label><br>
                  <%= actor.date_field :death_date, class:"form-control" %>
                </div>

                <div class="form-group">
                  <%= actor.text_field :death_place, class:"form-control", placeholder:"Lugar del fallecimiento" %>
                </div>
               
                <div class="text-center">
                  <br><%= actor.submit "Crear Actor", class:"btn btn-success" %>
                </div>
              
              <% end %>
             
            </div> 
        </div>
    </div>
</div>
